<Window x:Class="WpfApp1.Win4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Win4" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label FontSize="40" HorizontalAlignment="Center">string format</Label>
            <TextBox FontSize="15" HorizontalAlignment="Left" VerticalContentAlignment="Center" Height="40" Text="{Binding Value, ElementName=slid, StringFormat='Slider value: {0}'}" Margin="5" Padding="5"/>
            <Slider x:Name="slid" Margin="5" Minimum="50" Maximum="1000" Value="50"/>
            <Button Width="150" Margin="5" FontSize="30" Click="Button_Click">Далее</Button>
        </StackPanel>
        
    </Grid>
</Window>
